
 <%= render "shared/errors", obj: @article %>

<div class="row mt-4">
<div class="col">
<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group row">
    <div class="control-label col-sm-2 ">
        <%= f.label :title %> 
    </div>
    <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of Articles", autofocus: true %>
    </div>
    </div>

    <div class="form-group row">
    <div class="control-label col-sm-2">
        <%= f.label :description %>
    </div>
    <div class="col-sm-8">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of Articles", autofocus: true %>
    </div>
    </div>

    <div class="form-group row py-2 text-center">
    <div class="col-sm-10 mx-5">
        <%= f.submit  class: "btn btn-secondary "%>
        <%= link_to "Go Back to Articles", articles_path, class: "btn btn-secondary " %>
    </div>
    </div>

<% end %>
</div>
</div> 
