<h1 class="text-center">All Alpha Bloggers</h1>

<div class="container text-center">
<div class=" pagination justify-content-end">
    <small><%= will_paginate %></small>
 </div>
    <% @users.each do |user| %>
      <ul  class="listing">
        <div class="row">
            <div class="col-sm-6 offset-sm-3">
                <div class="card p-5 mt-3">
                <li><%= link_to link_to gravatar_for(user), user_path(user) %></li>
                <li class="article-title">
                    <%= link_to user.username, user_path(user) %>
                </li>
                <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
                <% if logged_in? and current_user.admin? %>
                <%= link_to "Delete this user", user_path(user), method: :delete,
                                            data: { confirm: "Are you sure you want to delete this user?"},
                                            class: "btn btn-danger" %>
                <% end %>                            
                </div>
            </div> 
        </div>
      </ul>
    <% end %>
    <div class=" pagination justify-content-end">
    <small><%= will_paginate %></small>
 </div>
</div> 